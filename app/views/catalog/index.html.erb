<div class="container">
  <h1>All Mentors</h1>
  <div style="margin:10px; display:flex; align-items:center; justify-content: center;">
    <%= form_tag(catalog_index_path, method: :get) do %>
      <div class="input-group">
        <div class="form-outline" style="margin-right:5px">
          <%= text_field_tag(:search, params[:search], class:'form-control')%>
        </div>
        <%= submit_tag "Search", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm">
        <%= render 'components/card', title: user.username, text: 'Subjects taught XYZ with experience working', img: 'https://imgur.com/EM2B1A8.png', link: catalog_path(user.id), btn: "More Info" %>
      </div>
    <% end %>

    <% if @users.length%3 == 1%>
      <div class="col-sm">
        <div style="width:18rem"> </div>
      </div>
      <div class="col-sm">
        <div style="width:18rem"> </div>
      </div>
    <% end %>

    <% if @users.length%3 == 2%>
      <div class="col-sm">
        <div style="width:18rem"> </div>
      </div>
    <% end %>

  </div>
</div>
