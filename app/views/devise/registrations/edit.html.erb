<div class="container">
  <br/><br/>
  <div class="row">
    <div class="col-lg-6 pb-3">
      <h1 class="text-left">
        Edit <%= resource_name.to_s.humanize %>
      </h1>

      <div>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :username %><br />
          <%= f.text_field :username, id: "username_edit", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email_edit", class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", id: "password_edit", class: 'form-control' %>
          <% if @minimum_password_length %>
            <em class="form-text text-muted"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation_edit", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", id: "current_password_edit", class: 'form-control' %>
        </div>

        <div class=”form-group”>
          (Upload your new profile picture below!)
          <%= f.file_field :avatar, class: 'form-control' %>
          <br />
        </div>

        <div class="form-group">
          <%= f.submit "Update", id: "confirmation_change_password", class: 'btn btn-info' %>
        </div>
      <% end %>

      <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
    </div>
    <div class="col-lg-6">
      <h3>Upgrade to premium</h3>

      <p class="form-group">
        <br/>
        <%= link_to "Upgrade my account", payment_checkout_path, id: "upgrade_account_button", class: 'btn btn-success' %>
      </p>
      <br/><br/>

      <h3>Cancel my account</h3>

      <p class="form-group">
        Unhappy?
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, id: "delete_account_button", class: 'btn btn-danger' %>
      </p>
    </div>
  </div>
</div>
