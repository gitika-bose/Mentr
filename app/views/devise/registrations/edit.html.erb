<div class="container">
  <br/><br/>
  <div class="row">
    <div class="col-lg-6 pb-3">
      <h1 class="text-left display-4">
        Edit <%= resource_name.to_s.humanize %>
      </h1>
      <div class='pb-3'>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: 'border rounded p-1', width: '200px', height: '200px', style: 'object-fit: cover !important; object-position: 20% 10%;' %>
        <% end %>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :username, class: 'h5' %><br />
          <%= f.text_field :username, id: "username_edit", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'h5' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "email_edit", class: 'form-control' %>
        </div>

        <div class="form-group">
          <p class="h5">Update Profile Picture</p>
          <div class="border rounded px-3 py-2"><%= f.file_field :avatar, class: '' %></div>
          <i class="text-muted">( Upload your new profile picture! )</i>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password, class: 'h5' %><br>
          <%= f.password_field :password, autocomplete: "new-password", id: "password_edit", class: 'form-control' %>
          <% if @minimum_password_length %>
            <em class="form-text text-muted"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          <i class="text-muted">( leave blank if you don't want to change it )</i><br />
        </div>

        <div class="form-group pb-2">
          <%= f.label :password_confirmation, class: 'h5 text-capitalize' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation_edit", class: 'form-control' %>
        </div>

        <div class="form-group border-top pt-3">
          <%= f.label :current_password, class: 'h5 text-capitalize' %><br /> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", id: "current_password_edit", class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= f.submit "Update", id: "confirmation_change_password", class: 'btn btn-info px-3' %>
        </div>
      <% end %>

      <%= link_to "Back", :back, class: "btn btn-outline-secondary px-3" %>
    </div>
    <div class="col-lg-6 jumbotron border-white">
      <h3 class="text-capitalize">Upgrade to premium</h3>

      <p class="form-group">
        <p class="pb-1">A lot of cool things are in store!</p>
        <%= link_to "Upgrade my account", payment_checkout_path, id: "upgrade_account_button", class: 'btn btn-success' %>
      </p>
      <br/>
      
      <h3 class="text-capitalize">Cancel my account</h3>

      <p class="form-group">
        Unhappy? We'll be sad to see you go...
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, id: "delete_account_button", class: 'btn btn-danger' %>
      </p>
    </div>
  </div>
</div>
