<div class="container justify-content-center max-width-60%">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.text_field :email, class: "form-control", id: "username_email_login" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password_login" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", id: "login_button"%>
      </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
