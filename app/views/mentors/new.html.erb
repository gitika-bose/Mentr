<div class="container">
  <h1 class="display-4">Become A Mentor</h1>

    <%= form_with model: @mentor do |f| %>
    <div class="textarea">
        <%= f.label :profile %><br />
        <%= f.text_area :profile, id: "profile_edit", required: true, class: 'form-control'  %>
    </div>

    <div>
        (Upload your resume below!)
        <%= f.file_field :resume, class: 'form-control' %>
        <br />
    </div>

    <div class="field">
        <%= f.label :company %><br />
        <%= f.text_field :company, id: "company_edit", class: 'form-control'  %>
    </div>

    <div class="field">
        <%= f.label :location %><br />
        <%= f.text_field :location, id: "location_edit", class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label :website %><br />
        <%= f.text_field :website, id: "website_edit", class: 'form-control'  %>
    </div>

    <div class="field">
        <%= f.label :linkedin %><br />
        <%= f.text_field :linkedin, id: "linkedin_edit", class: 'form-control'  %>
    </div>

    <div class="form-group">
        <%= f.label :subjects %><br />
        <%= select_tag 'subjects[]', options_for_select(Subject.all.map{ |u| u.name }, @subjects.map{ |u| u.name }), {:multiple => :multiple, :class => 'form-control js-source-states', :id => "form-tags"} %>
    </div>


    <div class="actions">
      <%= f.submit "Sign up", id: "submit_mentor_register", class: "btn btn-primary" %>
    </div>

    <% end %>

</div>
