<div class="container">
  <h1 class="display-4">Update Mentor Profile</h1>

    <%= form_with model: @mentor do |f| %>
    <div class="textarea">
        <%= f.label :profile %><br />
        <%= f.text_area :profile_description, id: "profile_edit" %>
    </div>

    <div class="field">
        <%= f.label :company %><br />
        <%= f.text_field :company, id: "company_edit" %>
    </div>
    
    <div class="field">
        <%= f.label :location %><br />
        <%= f.text_field :location, id: "location_edit" %>
    </div>
    
    <div class="field">
        <%= f.label :website %><br />
        <%= f.text_field :website, id: "website_edit" %>
    </div>

    <div class="field">
        <%= f.label :linkedin %><br />
        <%= f.text_field :linkedin, id: "linkedin_edit" %>
    </div>


    <div class="actions">
      <%= f.submit "Save", id: "edit_mentor_profile", class: "btn btn-primary" %>
    </div>

    <% end %>

    <h3>No Longer Want To Be Mentor?</h3>

    <p> <%= button_to "Quit mentoring", mentor_path(@mentor), data: { confirm: "Are you sure?" }, method: :delete, id: "delete_mentor_account_button"%></p>

</div>